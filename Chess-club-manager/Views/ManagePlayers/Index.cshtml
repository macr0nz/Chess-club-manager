@model IEnumerable<Chess_club_manager.DTO.Players.ViewManagePlayerDto>

@{
    ViewBag.Title = "Управление игроками";
}

<h2>Управление игроками</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success"><i class="fa fa-plus"></i> Добавить</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            ФИО игрока
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.BirthDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Info)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.Email))
            {
                @Html.DisplayFor(modelItem => item.Email)
            }
            else
            {
                <label class="label label-warning">Отсутствует</label>
            }
        </td>
        <td>
            <a href="@Url.Action("Details", "ManagePlayers", new {id = item.Id})" ><b>@item.FirstName @item.LastName</b></a>
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>*@
        <td>
            @if (item.BirthDay.HasValue)
            {
                @item.BirthDay.Value.ToShortDateString()
            }
            else
            {
                <label class="label label-warning">Отсутствует</label>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentRating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Info)
        </td>
        <td>
            @if (item.Roles != null)
            {
                foreach (var role in item.Roles)
                {
                    <label class="label label-info">@role.RoleId</label>
                }
            }
        </td>
        <td>
            <a href="@Url.Action("Details", "ManagePlayers", new {id = item.Id})" class="btn btn-default btn-xs"><i class="fa fa-search-plus"></i> Детали</a>
            <a href="@Url.Action("Edit", new {id = item.Id})" class="btn btn-default btn-xs"><i class="fa fa-cog"></i> Редактировать</a>
        </td>
    </tr>
}

</table>
