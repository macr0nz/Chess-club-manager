@{
    ViewBag.Title = Resources.Resource.ApplicationName + " - about";
}


<div class="well collapse in" id="infoJumb">
    <div style="text-align: center;">
        <h2>@Resources.Resource.ApplicationName</h2>
    </div>
    <p class="lead">@Resources.Resource.HomeJumbotronInfo</p>
    <p>
        <button class="btn btn-default" data-toggle="collapse" data-target="#infoJumb"><i class="fa fa-window-minimize"></i> Hide Info</button>
        <a href="@Url.Action("About", "Home")" class="btn btn-primary"><i class="fa fa-search-plus"></i> @Resources.Resource.Details</a>
    </p>
</div>

<h3>
    <p>Future about this app section</p> 
</h3>

