@model IEnumerable<Chess_club_manager.DataModel.Entity.Arbitrator>

@{
    ViewBag.Title = "Index";
}

<h2>Арбитры</h2>


<table class="table table-hover">
    <tr>
        <th>
            Имя
        </th>
        <th>
            Фамилия
        </th>
        <th>
            Титул
        </th>
        <th>
            Дата добавления
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            <a href="@Url.Action("Details", "Arbitrators", new {id = item.Id})" class="btn btn-default btn-xs"><i class="fa fa-search-plus"></i> Детали</a>
        </td>
    </tr>
}

</table>
