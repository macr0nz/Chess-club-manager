@model IEnumerable<Chess_club_manager.DTO.Players.ViewPlayerDto>

@{
    ViewBag.Title = "Игроки";
}

<h2>Игроки</h2>


<table class="table table-hover">
    <tr>
        <th>
            Имя
        </th>
        <th>
            Фамилия
        </th>
        <th>
            Дата рождения
        </th>
        <th>
            Титул
        </th>
        <th>
            Текущий рейтинг
        </th>
        <th>
            Информация
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @if (item.BirthDay.HasValue)
            {
                <h5>@item.BirthDay.Value.ToShortDateString()</h5>
            }
            else
            {
                <h5> - </h5>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @if (item.CurrentRating > 1000)
            {
                <i class="fa fa-star" style="color: gold;"></i>
            }
            @if (item.CurrentRating > 1500)
            {
                <i class="fa fa-star" style="color: gold;"></i>
            }
            @if (item.CurrentRating > 2000)
            {
                <i class="fa fa-star" style="color: gold;"></i>
            }
            @if (item.CurrentRating > 2500)
            {
                <i class="fa fa-star" style="color: gold;"></i>
            }
            @if (item.CurrentRating > 2700)
            {
                <i class="fa fa-star" style="color: gold;"></i>
            }
             @Html.DisplayFor(modelItem => item.CurrentRating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Info)
        </td>
        <td>
            <a href="@Url.Action("Details", new {id = item.Id})" class="btn btn-default btn-xs"><i class="fa fa-search-plus"></i> Детали</a>
        </td>
    </tr>
}

</table>
