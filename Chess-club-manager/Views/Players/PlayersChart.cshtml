
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>


<div class="col-md-10 well" style="height: 500px">
    
    <div id="playerChart"></div>

    <script type="text/javascript">

        window.onload = function() {
            var chart = new CanvasJS.Chart("playerChart",
                {
                    theme: "theme2",
                    animationEnabled: true,
                    backgroundColor: "#f5f5f5",
                    zoomEnabled: true,
                    
                    title: {
                        text: "Player rating history chart"
                    },
                    subtitles: [
                        { text: "Some info" }
                    ],

                    axisX:{
                        title: "Time",
                        gridThickness: 2
                    },
                    axisY: {
                        title: "Rating"
                    },

                    data: [
                        {        
                            type: "line",
                            dataPoints: [
                                { x: new Date(2017, 01, 1), y: 1200},
                                { x: new Date(2017, 01, 13), y: 1300},
                                { x: new Date(2017, 02, 5), y: 1400},
                                { x: new Date(2017, 02, 27), y: 1300},
                                { x: new Date(2017, 03, 11), y: 1500},
                                { x: new Date(2017, 03, 23), y: 1850},
                                { x: new Date(2017, 04, 20), y: 2005},
                                { x: new Date(2017, 04, 30), y: 2100},
                                { x: new Date(2017, 05, 25), y: 2000},
                                { x: new Date(2017, 06, 7), y: 2250}

                            ]
                        }
                    ]
                });
            chart.render();
        };

        @*dataPoints: @Html.Raw(ViewBag.DataPoints)*@
    </script>

</div>
 
