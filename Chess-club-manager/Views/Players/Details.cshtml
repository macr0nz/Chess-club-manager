@model Chess_club_manager.DTO.Players.PlayerDetailsDto

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-10 well">
        <h2>Детали</h2>

        <div>
            <h4>Игрок</h4>
            <hr />
            <div class="media">
                <div class="media-left">
                    <img src="~/Resources/Images/user.png" class="media-object" style="width:150px" alt="User Avatar">
                </div>
                <div class="media-body">
                    <h3 class="media-heading"><b>@Model.FirstName @Model.LastName</b></h3>
                    <dl class="dl-horizontal">
                        @*<dt>User Name (login):</dt>
                        <dd>@Model.UserName</dd>
                    
                        <dt>Email:</dt>
                        <dd>@Model.Email</dd>
                    
                        <dt>Phone Number:</dt>
                        <dd>@Model.PhoneNumber</dd>*@
                    
                        <dt>Birth Day:</dt>
                        <dd>@Model.BirthDay</dd>
                   
                        <dt>Title:</dt>
                        <dd>@Model.Title</dd>
                    
                        <dt>Current Rating:</dt>
                        <dd>@Model.CurrentRating</dd>
                    
                        <dt>Info:</dt>
                        <dd>@Model.Info</dd>
                    </dl>
                
                </div>
            </div>
        </div>


        <p>
            <a href="@Url.Action("Index")" class="btn btn-warning btn-sm"><i class="fa fa-arrow-left"></i> Назад</a>

            @*@if (Request.IsAuthenticated && User.IsInRole("admin"))
                {
                    <a href="@Url.Action("Edit", "ManagePlayers", new {id = Model.Id})" class="btn btn-default btn-sm"><i class="fa fa-cog"></i> Редактировать</a>
                }*@
        </p>


        <hr />
    </div>
</div>



<div class="row">
    
    @Html.Action("PlayersChart", "Players", new { id = Model.Id })



    <div id="playerTournaments" class="col-md-10 well">
        
        <h3 style="text-align: center;">Player game history</h3>

        @if (Model.Tournaments != null)
        {
            <div>
                @foreach (var tournament in Model.Tournaments)
                {
                    <div class="panel">
                        <p>
                            @tournament.Name
                        </p>
                    </div>
                }
            </div>
        }

        <div class="panel panel-success">
            <div class="panel-heading">Tournament name [win]</div>
            <div class="panel-body">
                Panel Content
                <p><a href="@Url.Action("About", "Home")" class="btn btn-primary btn-xs"><i class="fa fa-search-plus"></i> @Resources.Resource.Details</a></p>
            </div>
        </div>

        <div class="panel panel-danger">
            <div class="panel-heading">Tournament name [lost]</div>
            <div class="panel-body">Panel Content
                <p><a href="@Url.Action("About", "Home")" class="btn btn-primary btn-xs"><i class="fa fa-search-plus"></i> @Resources.Resource.Details</a></p></div>
        </div>
        
        <div class="panel panel-success">
            <div class="panel-heading">Tournament name [win]</div>
            <div class="panel-body">Panel Content</div>
        </div>
        
        <div class="panel panel-danger">
            <div class="panel-heading">Tournament name [lost]</div>
            <div class="panel-body">Panel Content</div>
        </div>
        
        <div class="panel panel-warning">
            <div class="panel-heading">Tournament name [any]</div>
            <div class="panel-body">Panel Content</div>
        </div>
    </div>
</div>